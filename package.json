{
  "name": "mysite",
  "version": "1.0.0",
  "description": "personal site & blog",
  "scripts": {
    "build:pug": "pug pug/ -o layouts/",
    "build:sass": "node-sass --output-style compressed -o static/css sass/",
    "autoprefixer": "postcss static/css/*.css --use autoprefixer -d static/css",
    "build": "npm run build:pug && npm run build:sass && npm run autoprefixer",
    "watch": "chokidar 'sass/*.sass' 'pug/*/**' -c 'npm run build'"
  },
  "author": {
    "name": "sam atkins",
    "url": "https://www.samatkins.me"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "chokidar-cli": "^1.2.1",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-cache": "^1.0.2",
    "gulp-imagemin": "^4.1.0",
    "gulp-responsive": "^2.11.0",
    "node-sass": "^4.9.3",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "run-sequence": "^2.2.1"
  },
  "dependencies": {}
}
